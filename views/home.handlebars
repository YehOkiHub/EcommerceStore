<div id="landing-hero">
    <div class="overlay"></div>
    <img src="https://images.pexels.com/photos/1034065/pexels-photo-1034065.jpeg">
    <div id="shop-button">
        <a href="#shop">SHOP</a>
        <div id="down arrow">^</div>
    </div>
</div>
<div id="shop">
        <div class="card-container">
            {{#each products}}
            <div class="product-card">
                <div class="image-container">
                    <img class="product-image" id="placeholder-image" src={{dataValues.img}}>
                </div>
                <h3 class="product-name">{{dataValues.product_name}}</h3>
                <h3 class="product-price">${{dataValues.price}}</h3>
                <button class="button" onclick="AddtoCart({{dataValues.id}})" type="button">Add to cart</button>

            </div>
           {{/each}}
        </div>

        
    </div>

    <script>
         async function AddtoCart(product_id){
            console.log(product_id)
            let response = await fetch("http://localhost:3001/api/products/addtocart/"+product_id, {
                method: "GET",
                headers: {
                    "Content-Type" : "application/json"
                }
            })
            let data = await response.json()
            alert(data.message)


         }
    </script>